<?xml version="1.0" encoding="utf-8" standalone="no"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="72dp">

    <ProgressBar
        android:id="@+id/cube_ptr_load_more_default_footer_progressbar"
        style="@android:style/Widget.ProgressBar.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:layout_toLeftOf="@+id/cube_ptr_load_more_default_footer_text_view"
        android:layout_toStartOf="@+id/cube_ptr_load_more_default_footer_text_view"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/cube_ptr_load_more_default_footer_text_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:gravity="center"
        android:text="@string/cube_ptr_pull_up_to_load"
        android:textColor="#999999"
        android:textSize="13sp" />

</RelativeLayout>